---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/members', label: 'Members' },
  { href: '/stats', label: 'Statistics' },
];
---

<nav class="bg-blue-primary text-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center space-x-3">
        <span class="text-gold-DEFAULT text-2xl font-bold">[DAWN]</span>
        <span class="text-xl font-semibold">DawnReaver</span>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-3 py-2 rounded-md text-sm font-medium transition-colors',
              currentPath === link.href
                ? 'bg-blue-secondary text-gold-DEFAULT'
                : 'text-white hover:bg-blue-secondary hover:text-gold-light',
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="text-white hover:text-gold-DEFAULT focus:outline-none focus:ring-2 focus:ring-gold-DEFAULT"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-blue-dark">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-3 py-2 rounded-md text-base font-medium',
            currentPath === link.href
              ? 'bg-blue-secondary text-gold-DEFAULT'
              : 'text-white hover:bg-blue-secondary hover:text-gold-light',
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
