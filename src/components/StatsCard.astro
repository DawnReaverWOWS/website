---
interface Props {
  title: string;
  value: string;
  subtitle?: string;
  icon?: string;
  trend?: 'up' | 'down' | 'neutral';
}

const { title, value, subtitle, icon, trend } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-gold-DEFAULT hover:shadow-lg transition-shadow">
  <div class="flex items-center justify-between">
    <div class="flex-1">
      <p class="text-text-secondary text-sm font-medium uppercase tracking-wide mb-1">
        {title}
      </p>
      <p class="text-3xl font-bold text-blue-primary">
        {value}
      </p>
      {subtitle && (
        <p class="text-text-tertiary text-sm mt-2">
          {subtitle}
        </p>
      )}
    </div>

    {icon && (
      <div class="ml-4">
        <div class="bg-blue-primary bg-opacity-10 rounded-full p-3">
          <svg class="w-8 h-8 text-blue-primary" fill="currentColor" viewBox="0 0 20 20">
            <path d={icon} />
          </svg>
        </div>
      </div>
    )}
  </div>

  {trend && (
    <div class="mt-4 flex items-center">
      {trend === 'up' && (
        <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      )}
      {trend === 'down' && (
        <svg class="w-4 h-4 text-red-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
      )}
      <span class="text-sm text-text-tertiary">
        {trend === 'up' ? 'Increasing' : trend === 'down' ? 'Decreasing' : 'Stable'}
      </span>
    </div>
  )}
</div>
