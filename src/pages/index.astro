---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="DawnReaver [DAWN] - Elite WoWS Clan"
  description="DawnReaver - Elite World of Warships clan. Competitive clan battles, tactical excellence, and naval supremacy."
>
  <Navigation />

  <!-- HERO BANNER - Condensed -->
  <section class="relative h-[500px] flex items-center justify-center overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-gradient-to-b from-navy-900 via-navy-800 to-navy-950">
      <div class="absolute inset-0 opacity-20" style="background-image: url('https://images.unsplash.com/photo-1574680796665-4d71f49b1f7c?w=1920'); background-size: cover; background-position: center;"></div>
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-navy-950 via-transparent to-transparent"></div>

    <!-- Hero Content -->
    <div class="relative z-10 text-center px-4">
      <div class="mb-4">
        <div class="text-gold-DEFAULT text-7xl font-display font-bold glow-gold tracking-wider">
          [DAWN]
        </div>
        <h1 class="text-5xl font-display font-bold text-text-primary mt-3 tracking-wide">
          DAWNREAVER
        </h1>
      </div>

      <p class="text-steel-light text-xl font-semibold uppercase tracking-widest mb-6">
        Naval Superiority | Clan Battles | Tactical Excellence
      </p>

      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a
          href="/members"
          class="steel-panel px-6 py-3 text-gold-DEFAULT font-bold uppercase tracking-wide hover:bg-gold-DEFAULT hover:text-navy-950 transition-all alert-border"
        >
          View Roster
        </a>
        <a
          href="/recruitment"
          class="steel-panel px-6 py-3 text-cyan-glow font-bold uppercase tracking-wide hover:bg-cyan-glow hover:text-navy-950 transition-all"
        >
          Join the Fleet
        </a>
        <a
          href="/stats"
          class="steel-panel px-6 py-3 text-steel-light font-bold uppercase tracking-wide hover:bg-steel-light hover:text-navy-950 transition-all"
        >
          Statistics
        </a>
      </div>
    </div>

    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-cyan-glow to-transparent opacity-50 animate-pulse"></div>
  </section>

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- ABOUT SECTION - Condensed -->
    <section class="mb-8">
      <div class="steel-panel p-6">
        <h2 class="text-2xl font-display font-bold text-gold-DEFAULT mb-3 uppercase">Our Mission</h2>
        <p class="text-text-secondary text-base leading-relaxed">
          DawnReaver is an elite World of Warships clan dedicated to <span class="text-gold-DEFAULT font-semibold">competitive clan battles</span>,
          strategic naval warfare, and tactical excellence. We maintain the highest standards of skill, communication, and teamwork
          while fostering a tight-knit community of dedicated captains. Whether pushing for <span class="text-cyan-glow font-semibold">Typhoon League</span>
          or coordinating precision strikes, DawnReaver represents naval supremacy on the high seas.
        </p>
        <div class="mt-4 flex flex-wrap gap-4">
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-gold-DEFAULT rounded-full"></div>
            <span class="text-text-primary font-semibold text-sm">Server: NA</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-cyan-glow rounded-full"></div>
            <span class="text-text-primary font-semibold text-sm">Focus: Clan Battles</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-red-alert rounded-full"></div>
            <span class="text-text-primary font-semibold text-sm">Competitive</span>
          </div>
        </div>
      </div>
    </section>

    <!-- QUICK INFO GRID - Condensed -->
    <section class="mb-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="steel-panel p-4 text-center alert-border">
          <div class="text-3xl font-display font-bold text-cyan-glow mb-1">55%+</div>
          <div class="text-steel-light text-sm uppercase tracking-wider">Min Win Rate</div>
        </div>

        <div class="steel-panel p-4 text-center alert-border">
          <div class="text-3xl font-display font-bold text-gold-DEFAULT mb-1">Tier X</div>
          <div class="text-steel-light text-sm uppercase tracking-wider">Ships Required</div>
        </div>

        <div class="steel-panel p-4 text-center alert-border">
          <div class="text-3xl font-display font-bold text-cyan-glow mb-1">Mon/Wed/Fri</div>
          <div class="text-steel-light text-sm uppercase tracking-wider">Clan Battles</div>
        </div>
      </div>
    </section>

    <!-- FEATURES GRID - Condensed -->
    <section class="mb-8">
      <h2 class="text-2xl font-display font-bold text-gold-DEFAULT mb-4 text-center glow-gold uppercase">
        Why Join DawnReaver?
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="steel-panel p-4 flex items-start gap-3">
          <span class="text-3xl">üèÜ</span>
          <div>
            <h3 class="text-lg font-bold text-gold-DEFAULT mb-1">Competitive Excellence</h3>
            <p class="text-text-secondary text-sm">Typhoon League clan battles with experienced leadership.</p>
          </div>
        </div>

        <div class="steel-panel p-4 flex items-start gap-3">
          <span class="text-3xl">üéØ</span>
          <div>
            <h3 class="text-lg font-bold text-gold-DEFAULT mb-1">Strategic Gameplay</h3>
            <p class="text-text-secondary text-sm">Organized divisions and tactical coordination.</p>
          </div>
        </div>

        <div class="steel-panel p-4 flex items-start gap-3">
          <span class="text-3xl">‚öì</span>
          <div>
            <h3 class="text-lg font-bold text-gold-DEFAULT mb-1">Naval Base Bonuses</h3>
            <p class="text-text-secondary text-sm">Fully upgraded base with maximum bonuses.</p>
          </div>
        </div>

        <div class="steel-panel p-4 flex items-start gap-3">
          <span class="text-3xl">üë•</span>
          <div>
            <h3 class="text-lg font-bold text-gold-DEFAULT mb-1">Active Community</h3>
            <p class="text-text-secondary text-sm">Discord with dedicated captains and events.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA - Condensed -->
    <section class="text-center steel-panel p-6 alert-border">
      <h2 class="text-3xl font-display font-bold text-gold-DEFAULT glow-gold mb-2 uppercase">
        Ready for Battle?
      </h2>
      <p class="text-steel-light mb-4">
        Join DawnReaver and dominate the seas with elite tactical gameplay.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a
          href="/recruitment"
          class="steel-panel px-6 py-3 text-gold-DEFAULT font-display font-bold uppercase tracking-wide hover:bg-gold-DEFAULT hover:text-navy-950 transition-all"
        >
          Apply Now
        </a>
        <a
          href="/members"
          class="steel-panel px-6 py-3 text-cyan-glow font-display font-bold uppercase tracking-wide hover:bg-cyan-glow hover:text-navy-950 transition-all"
        >
          View Fleet
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
