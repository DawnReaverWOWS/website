---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getMembersWithStats } from '../lib/wargaming-api';
import {
  formatNumber,
  formatPercentage,
  formatRelativeTime,
  getPRRating,
  getRoleDisplayName,
  getRoleColor,
  getRankInsignia,
  calculateAchievements,
  calculateTopPerformers,
  ACHIEVEMENT_PINS
} from '../lib/utils';

const members = await getMembersWithStats();

// Role hierarchy for sorting (Commander -> Enlisted)
function getRoleOrder(role: string): number {
  const order: Record<string, number> = {
    commander: 1,
    executive_officer: 2,
    recruitment_officer: 3,
    commissioned_officer: 4,
    officer: 5,
    private: 6,
  };
  return order[role] || 999;
}

// Calculate top performers for Top Performer pin
const topPerformerIds = calculateTopPerformers(members, 5);

// Calculate achievements for each member
const memberAchievements = members.map(member => ({
  ...member,
  achievements: calculateAchievements({
    ...member,
    account_id: member.account_id,
  }),
  isTopPerformer: topPerformerIds.includes(member.account_id),
}));

// Add top_performer achievement to top 5
memberAchievements.forEach(member => {
  if (member.isTopPerformer && !member.achievements.includes('top_performer')) {
    member.achievements.push('top_performer');
  }
});

// Sort members by role hierarchy first
memberAchievements.sort((a, b) => {
  const aOrder = getRoleOrder(a.role);
  const bOrder = getRoleOrder(b.role);
  return aOrder - bOrder;
});
---

<BaseLayout
  title="Fleet Roster - DawnReaver [DAWN]"
  description="Complete roster of DawnReaver clan members with detailed battle statistics and performance metrics."
>
  <Navigation />

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="mb-12 text-center">
      <h1 class="text-5xl font-display font-bold text-gold-DEFAULT mb-4 glow-gold uppercase">
        Fleet Roster
      </h1>
      <p class="text-steel-light text-xl">
        {members.length} Combat-Ready Captains | Full Battle Statistics
      </p>
    </div>


    <!-- Grid Layout: Table + Legend Sidebar -->
    <div class="grid grid-cols-1 xl:grid-cols-[1fr_280px] gap-6">
      <!-- Left Column: Members Table -->
      <div class="min-w-0">
        <!-- Table Header -->
        <div class="mb-4">
          <h2 class="text-2xl font-display font-bold text-gold-DEFAULT uppercase">Active Roster</h2>
          <p class="text-steel-light text-sm mt-1">{memberAchievements.length} Members Deployed</p>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto">
        <table class="w-full" id="member-table">
          <thead class="bg-navy-900 border-b-2 border-gold-DEFAULT">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-display font-bold text-steel-light uppercase tracking-wider">
                Rank
              </th>
              <th
                class="px-6 py-4 text-left text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="nickname"
              >
                Player
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
              <th
                class="px-4 py-4 text-center text-xs font-display font-bold text-steel-light uppercase tracking-wider"
                title="Rank Insignia"
              >
                Insignia
              </th>
              <th
                class="px-6 py-4 text-left text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="role"
              >
                Role
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
              <th
                class="px-4 py-4 text-left text-xs font-display font-bold text-steel-light uppercase tracking-wider"
                title="Service Commendations"
              >
                Commendations
              </th>
              <th
                class="px-6 py-4 text-right text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="battles"
              >
                Battles
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
              <th
                class="px-6 py-4 text-right text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="win_rate"
              >
                Win Rate
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
              <th
                class="px-6 py-4 text-right text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="avg_damage"
              >
                Avg Damage
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
              <th
                class="px-6 py-4 text-right text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="pr"
              >
                PR
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
              <th
                class="px-6 py-4 text-left text-xs font-display font-bold text-steel-light uppercase tracking-wider cursor-pointer hover:bg-navy-800 transition-colors select-none"
                data-sort="last_battle_time"
              >
                Last Battle
                <span class="sort-indicator ml-1 text-gold-DEFAULT opacity-0">▼</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-navy-800">
            {memberAchievements.map((member, index) => {
              const prRating = getPRRating(member.pr);

              return (
                <tr
                  class="bg-navy-900/30 hover:bg-navy-800/50 transition-colors border-l-2 border-transparent hover:border-gold-DEFAULT"
                  data-nickname={member.nickname}
                  data-role={getRoleOrder(member.role)}
                  data-battles={member.battles}
                  data-win-rate={member.win_rate}
                  data-avg-damage={member.avg_damage}
                  data-pr={member.pr}
                  data-last-battle-time={member.last_battle_time || 0}
                  data-achievements={member.achievements.length}
                >
                  <!-- Rank -->
                  <td class="rank-cell px-6 py-4 whitespace-nowrap">
                    <span class="rank-number text-lg font-display font-bold text-gold-DEFAULT">
                      #{index + 1}
                    </span>
                  </td>

                  <!-- Player Name -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <a
                      href={`/player/${member.account_id}`}
                      class="text-base font-bold text-text-primary hover:text-gold-DEFAULT hover:glow-gold transition-all"
                    >
                      {member.nickname}
                    </a>
                  </td>

                  <!-- Insignia -->
                  <td class="px-4 py-4 whitespace-nowrap text-center">
                    <span
                      class="text-xl font-mono tracking-wider"
                      style={`color: ${getRoleColor(member.role)};`}
                      title={getRoleDisplayName(member.role)}
                    >
                      {getRankInsignia(member.role)}
                    </span>
                  </td>

                  <!-- Role -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span
                      class="px-3 py-1 text-xs font-bold rounded uppercase tracking-wider border"
                      style={`color: ${getRoleColor(member.role)}; border-color: ${getRoleColor(member.role)}; background-color: ${getRoleColor(member.role)}15;`}
                    >
                      {getRoleDisplayName(member.role)}
                    </span>
                  </td>

                  <!-- Commendations (Achievement Pins) -->
                  <td class="px-4 py-4 whitespace-nowrap">
                    <div class="flex gap-1 flex-wrap">
                      {member.achievements.length > 0 ? (
                        member.achievements.map(achievementKey => {
                          const pin = ACHIEVEMENT_PINS[achievementKey];
                          return pin ? (
                            <span
                              class="text-lg cursor-help"
                              style={`color: ${pin.color};`}
                              title={`${pin.name}: ${pin.description}`}
                            >
                              {pin.icon}
                            </span>
                          ) : null;
                        })
                      ) : (
                        <span class="text-text-tertiary text-xs italic">-</span>
                      )}
                    </div>
                  </td>

                  <!-- Battles -->
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    {member.hidden_profile ? (
                      <span class="text-text-tertiary italic text-sm">Hidden</span>
                    ) : (
                      <span class="text-base font-mono font-semibold text-text-primary">
                        {formatNumber(member.battles)}
                      </span>
                    )}
                  </td>

                  <!-- Win Rate -->
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    {member.hidden_profile ? (
                      <span class="text-text-tertiary italic text-sm">-</span>
                    ) : (
                      <span class="text-lg font-display font-bold text-cyan-glow">
                        {formatPercentage(member.win_rate)}
                      </span>
                    )}
                  </td>

                  <!-- Avg Damage -->
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    {member.hidden_profile ? (
                      <span class="text-text-tertiary italic text-sm">-</span>
                    ) : (
                      <span class="text-base font-mono font-semibold text-text-primary">
                        {formatNumber(Math.round(member.avg_damage))}
                      </span>
                    )}
                  </td>

                  <!-- PR -->
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    {member.hidden_profile ? (
                      <span class="text-text-tertiary italic text-sm">-</span>
                    ) : (
                      <span
                        class="px-3 py-1 rounded font-display font-bold text-sm text-white border-2"
                        style={`background-color: ${prRating.color}; border-color: ${prRating.color};`}
                        title={prRating.label}
                      >
                        {formatNumber(member.pr)}
                      </span>
                    )}
                  </td>

                  <!-- Last Battle -->
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-text-tertiary">
                    {member.last_battle_time ? formatRelativeTime(member.last_battle_time) : '-'}
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>

        {members.length === 0 && (
          <div class="px-6 py-16 text-center">
            <p class="text-text-tertiary text-lg">No members found. Configure your clan ID to display live roster data.</p>
          </div>
        )}
      </div>
      <!-- End Left Column -->

      <!-- Right Column: Legend Sidebar -->
      <aside class="xl:sticky xl:top-4 xl:self-start">
        <div class="steel-panel p-4">
          <h3 class="text-lg font-display font-bold text-gold-DEFAULT mb-3 uppercase border-b border-navy-700 pb-2">
            Commendations
          </h3>
          <div class="space-y-2 text-sm">
            {Object.entries(ACHIEVEMENT_PINS).map(([key, pin]) => (
              <div class="flex items-start gap-2">
                <span class="text-xl flex-shrink-0" style={`color: ${pin.color};`}>
                  {pin.icon}
                </span>
                <div class="min-w-0">
                  <div class="font-bold text-text-primary text-xs" style={`color: ${pin.color};`}>
                    {pin.name}
                  </div>
                  <div class="text-text-tertiary text-xs leading-tight">
                    {pin.description}
                  </div>
                </div>
              </div>
            ))}
          </div>

          <!-- Insignia Legend -->
          <h3 class="text-lg font-display font-bold text-gold-DEFAULT mt-6 mb-3 uppercase border-b border-navy-700 pb-2">
            Rank Insignia
          </h3>
          <div class="space-y-2 text-sm">
            <div class="flex items-center gap-2">
              <span class="text-xl font-mono" style="color: #FFD700;">★★★★★</span>
              <span class="text-text-secondary text-xs">Commander</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl font-mono" style="color: #FFA500;">★★★★</span>
              <span class="text-text-secondary text-xs">Executive Officer</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl font-mono" style="color: #9B59B6;">★★★</span>
              <span class="text-text-secondary text-xs">Recruiting Officer</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl font-mono" style="color: #00D9FF;">★★</span>
              <span class="text-text-secondary text-xs">Commissioned Officer</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl font-mono" style="color: #0055AA;">★</span>
              <span class="text-text-secondary text-xs">Line Officer</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-xl font-mono" style="color: #8B9CB6;">═</span>
              <span class="text-text-secondary text-xs">Enlisted</span>
            </div>
          </div>
        </div>
      </aside>
      <!-- End Right Column -->
    </div>
    <!-- End Grid Layout -->

    <!-- Back to Home -->
    <div class="mt-12 text-center">
      <a
        href="/"
        class="inline-block steel-panel px-8 py-3 text-gold-DEFAULT font-display font-bold uppercase tracking-wide hover:bg-gold-DEFAULT hover:text-navy-950 transition-all duration-300 alert-border"
      >
        ← Back to Command Center
      </a>
    </div>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Client-side table sorting
  const table = document.getElementById('member-table');
  const headers = table?.querySelectorAll('th[data-sort]');
  const tbody = table?.querySelector('tbody');

  let currentSort: string | null = null;
  let currentDirection: 'asc' | 'desc' = 'desc';

  headers?.forEach(header => {
    header.addEventListener('click', () => {
      const sortKey = header.getAttribute('data-sort');
      if (!sortKey || !tbody) return;

      // Toggle direction if clicking same column, otherwise default to descending
      if (currentSort === sortKey) {
        currentDirection = currentDirection === 'desc' ? 'asc' : 'desc';
      } else {
        currentDirection = 'desc';
      }
      currentSort = sortKey;

      // Update all sort indicators
      headers.forEach(h => {
        const indicator = h.querySelector('.sort-indicator');
        if (indicator) {
          if (h === header) {
            indicator.classList.remove('opacity-0');
            indicator.textContent = currentDirection === 'desc' ? '▼' : '▲';
          } else {
            indicator.classList.add('opacity-0');
          }
        }
      });

      // Get all rows and sort them
      const rows = Array.from(tbody.querySelectorAll('tr'));

      rows.sort((a, b) => {
        const aValue = a.getAttribute(`data-${sortKey.replace('_', '-')}`);
        const bValue = b.getAttribute(`data-${sortKey.replace('_', '-')}`);

        // Handle null/empty values
        if (!aValue && !bValue) return 0;
        if (!aValue) return 1;
        if (!bValue) return -1;

        // Determine if numeric or string comparison
        let comparison = 0;
        if (sortKey === 'nickname') {
          // String comparison for nickname
          comparison = aValue.localeCompare(bValue);
        } else if (sortKey === 'role') {
          // Numeric comparison for role (using role order)
          const aNum = parseFloat(aValue);
          const bNum = parseFloat(bValue);
          comparison = aNum - bNum;
        } else {
          // Numeric comparison for all stats
          const aNum = parseFloat(aValue);
          const bNum = parseFloat(bValue);
          comparison = aNum - bNum;
        }

        return currentDirection === 'desc' ? -comparison : comparison;
      });

      // Clear and re-append rows
      tbody.innerHTML = '';
      rows.forEach((row, index) => {
        // Update rank numbers
        const rankNumber = row.querySelector('.rank-number');
        if (rankNumber) {
          rankNumber.textContent = `#${index + 1}`;
        }
        tbody.appendChild(row);
      });
    });
  });
</script>

<style>
  th[data-sort] {
    position: relative;
  }

  th[data-sort]:hover {
    background-color: rgba(0, 0, 0, 0.2);
  }
</style>
