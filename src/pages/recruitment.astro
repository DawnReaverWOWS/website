---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getClanInfo } from '../lib/wargaming-api';

const clan = await getClanInfo();
---

<BaseLayout
  title="Join the Fleet - DawnReaver [DAWN]"
  description="Join DawnReaver - Elite World of Warships clan. Requirements, application process, and what we offer."
>
  <Navigation />

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="mb-12 text-center">
      <h1 class="text-6xl font-display font-bold text-gold-DEFAULT mb-4 glow-gold uppercase">
        Join the Fleet
      </h1>
      <p class="text-steel-light text-2xl">
        Enlist with DawnReaver | Elite Clan Battles | Tactical Excellence
      </p>
    </div>

    <!-- Why Join Section -->
    <section class="mb-16">
      <div class="steel-panel p-8 alert-border mb-8">
        <h2 class="text-3xl font-display font-bold text-cyan-glow mb-6 uppercase">Why DawnReaver?</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex items-start gap-4">
            <span class="text-4xl">üèÜ</span>
            <div>
              <h3 class="text-xl font-bold text-gold-DEFAULT mb-2">Competitive Excellence</h3>
              <p class="text-text-secondary">Typhoon League clan battles with experienced leadership and coordinated tactics.</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <span class="text-4xl">üéØ</span>
            <div>
              <h3 class="text-xl font-bold text-gold-DEFAULT mb-2">Strategic Gameplay</h3>
              <p class="text-text-secondary">Organized division play, training sessions, and tactical coordination.</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <span class="text-4xl">‚öì</span>
            <div>
              <h3 class="text-xl font-bold text-gold-DEFAULT mb-2">Naval Base Bonuses</h3>
              <p class="text-text-secondary">Fully upgraded naval base with maximum economic and combat bonuses.</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <span class="text-4xl">üë•</span>
            <div>
              <h3 class="text-xl font-bold text-gold-DEFAULT mb-2">Active Community</h3>
              <p class="text-text-secondary">Discord server with dedicated captains, voice comms, and social events.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Requirements & Application Process -->
    <section class="mb-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Requirements -->
        <div class="steel-panel p-8 alert-border">
          <h3 class="text-3xl font-display font-bold text-gold-DEFAULT mb-6 uppercase flex items-center gap-3">
            <span class="text-4xl">üìã</span> Requirements
          </h3>
          <ul class="space-y-5">
            <li class="flex items-start gap-4">
              <span class="text-gold-DEFAULT text-2xl font-bold">‚ñ∏</span>
              <div>
                <div class="font-bold text-text-primary text-lg mb-1">Minimum Stats</div>
                <div class="text-text-secondary">
                  ‚Ä¢ 45%+ Win Rate (Random Battles)<br>
                  ‚Ä¢ 1300+ Personal Rating (PR)<br>
                  ‚Ä¢ 500+ battles minimum
                </div>
              </div>
            </li>

            <li class="flex items-start gap-4">
              <span class="text-gold-DEFAULT text-2xl font-bold">‚ñ∏</span>
              <div>
                <div class="font-bold text-text-primary text-lg mb-1">Ship Requirements</div>
                <div class="text-text-secondary">
                  ‚Ä¢ 1+ Tier X ships combat-ready<br>
                  ‚Ä¢ DD and Cruiser preferred<br>
                  ‚Ä¢ Tier VII+ for clan battles
                </div>
              </div>
            </li>

            <li class="flex items-start gap-4">
              <span class="text-gold-DEFAULT text-2xl font-bold">‚ñ∏</span>
              <div>
                <div class="font-bold text-text-primary text-lg mb-1">Communication</div>
                <div class="text-text-secondary">
                  ‚Ä¢ Discord required (voice + text)<br>
                  ‚Ä¢ Working microphone mandatory<br>
                  ‚Ä¢ English communication
                </div>
              </div>
            </li>

            <li class="flex items-start gap-4">
              <span class="text-gold-DEFAULT text-2xl font-bold">‚ñ∏</span>
              <div>
                <div class="font-bold text-text-primary text-lg mb-1">Availability</div>
                <div class="text-text-secondary">
                  ‚Ä¢ Clan Battles: 8PM EST Mon/Wed/Fri<br>
                  ‚Ä¢ Active participation in clan events
                </div>
              </div>
            </li>

            <li class="flex items-start gap-4">
              <span class="text-gold-DEFAULT text-2xl font-bold">‚ñ∏</span>
              <div>
                <div class="font-bold text-text-primary text-lg mb-1">Attitude & Conduct</div>
                <div class="text-text-secondary">
                  ‚Ä¢ Competitive mindset<br>
                  ‚Ä¢ Team-first mentality<br>
                  ‚Ä¢ Respectful communication<br>
                  ‚Ä¢ Willingness to learn and improve
                </div>
              </div>
            </li>
          </ul>
        </div>

        <!-- Application Process -->
        <div class="steel-panel p-8">
          <h3 class="text-3xl font-display font-bold text-cyan-glow mb-6 uppercase flex items-center gap-3">
            <span class="text-4xl">üöÄ</span> How to Apply
          </h3>
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="steel-panel w-12 h-12 flex items-center justify-center font-display font-bold text-xl text-gold-DEFAULT alert-border flex-shrink-0">
                1
              </div>
              <div>
                <div class="font-bold text-text-primary text-lg mb-2">Join Our Discord</div>
                <div class="text-text-secondary mb-3">
                  Click the button below to join our Discord server and introduce yourself in #general.
                </div>
                <a
                  href="https://discord.gg/MmQzx7Uj"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-block steel-panel px-6 py-2 text-cyan-glow font-bold uppercase text-sm hover:bg-cyan-glow hover:text-navy-950 transition-all"
                >
                  Join Discord ‚Üí
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="steel-panel w-12 h-12 flex items-center justify-center font-display font-bold text-xl text-gold-DEFAULT alert-border flex-shrink-0">
                2
              </div>
              <div>
                <div class="font-bold text-text-primary text-lg mb-2">Submit Application</div>
                <div class="text-text-secondary">
                  Post in <span class="text-gold-DEFAULT font-mono">#recruitment</span> channel with:<br>
                  ‚Ä¢ In-Game Name (IGN)<br>
                  ‚Ä¢ Link to your WoWS stats<br>
                  ‚Ä¢ Tier X ships owned<br>
                  ‚Ä¢ Availability for clan battles<br>
                  ‚Ä¢ Why you want to join DawnReaver
                </div>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="steel-panel w-12 h-12 flex items-center justify-center font-display font-bold text-xl text-gold-DEFAULT alert-border flex-shrink-0">
                3
              </div>
              <div>
                <div class="font-bold text-text-primary text-lg mb-2">Interview Process</div>
                <div class="text-text-secondary">
                  Brief voice chat with officer staff to discuss:<br>
                  ‚Ä¢ Your playstyle and preferred ships<br>
                  ‚Ä¢ Clan battle experience<br>
                  ‚Ä¢ Availability and commitment<br>
                  ‚Ä¢ Questions about DawnReaver
                </div>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="steel-panel w-12 h-12 flex items-center justify-center font-display font-bold text-xl text-gold-DEFAULT alert-border flex-shrink-0">
                4
              </div>
              <div>
                <div class="font-bold text-text-primary text-lg mb-2">Trial Period</div>
                <div class="text-text-secondary">
                  2-week trial period where you'll:<br>
                  ‚Ä¢ Participate in clan battles<br>
                  ‚Ä¢ Train with the team<br>
                  ‚Ä¢ Learn our tactics and strategies<br>
                  ‚Ä¢ Prove your dedication and skill
                </div>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="steel-panel w-12 h-12 flex items-center justify-center font-display font-bold text-xl text-gold-DEFAULT alert-border flex-shrink-0">
                5
              </div>
              <div>
                <div class="font-bold text-text-primary text-lg mb-2">Full Membership</div>
                <div class="text-text-secondary">
                  After successful trial, receive full member status with:<br>
                  ‚Ä¢ Access to all clan resources<br>
                  ‚Ä¢ Naval base bonuses<br>
                  ‚Ä¢ Priority in clan battle lineups<br>
                  ‚Ä¢ Voice in clan decisions
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What We Expect -->
    <section class="mb-16">
      <div class="steel-panel p-8">
        <h2 class="text-3xl font-display font-bold text-gold-DEFAULT mb-6 uppercase text-center">
          What We Expect From You
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="text-5xl mb-3">‚öîÔ∏è</div>
            <h3 class="text-xl font-bold text-cyan-glow mb-2">Competitive Drive</h3>
            <p class="text-text-secondary">Push for victory in every battle. Learn from losses and celebrate wins.</p>
          </div>

          <div>
            <div class="text-5xl mb-3">ü§ù</div>
            <h3 class="text-xl font-bold text-cyan-glow mb-2">Team Player</h3>
            <p class="text-text-secondary">Support your teammates, follow calls, and put the clan's success first.</p>
          </div>

          <div>
            <div class="text-5xl mb-3">üìà</div>
            <h3 class="text-xl font-bold text-cyan-glow mb-2">Continuous Improvement</h3>
            <p class="text-text-secondary">Always seeking to improve your gameplay, learn new tactics, and master new ships.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center steel-panel p-12 alert-border">
      <h2 class="text-5xl font-display font-bold text-gold-DEFAULT glow-gold mb-4 uppercase">
        Ready to Join?
      </h2>
      <p class="text-steel-light text-xl mb-8">
        Take the first step towards naval supremacy with DawnReaver.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={clan ? `https://clans.worldofwarships.com/clans/profile/${clan.clan_id}/` : 'https://clans.worldofwarships.com'}
          target="_blank"
          rel="noopener noreferrer"
          class="steel-panel px-8 py-4 text-gold-DEFAULT font-display font-bold text-lg uppercase tracking-wide hover:bg-gold-DEFAULT hover:text-navy-950 transition-all duration-300"
        >
          Apply on WoWS Portal
        </a>
        <a
          href="/"
          class="steel-panel px-8 py-4 text-cyan-glow font-display font-bold text-lg uppercase tracking-wide hover:bg-cyan-glow hover:text-navy-950 transition-all duration-300"
        >
          ‚Üê Back to Home
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
